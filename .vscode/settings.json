{
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.analysis.indexing": true,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.typeCheckingMode": "strict",
    "editor.formatOnSave": true,
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "editor.rulers": [
        99
    ],
    "autoDocstring.guessTypes": false,
    "autoDocstring.docstringFormat": "google-notypes",
    "cSpell.words": [
        "argparse",
        "autodoc",
        "autosummary",
        "bysource",
        "configpile",
        "dataclass",
        "dataclasses",
        "isroutine",
        "literalinclude",
        "mathjax",
        "maxdepth",
        "parsy",
        "positionals",
        "pyparsing",
        "Rosset",
        "rtype",
        "toctree",
        "userr"
    ],
    "files.exclude": {
        ".venv/": true,
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/build": true,
        "**/dist": true,
        "docs/source/_autosummary": true
    },
    "esbonio.server.enabled": true,
    "esbonio.sphinx.buildDir": "${workspaceFolder}/docs/build/html",
    "esbonio.sphinx.confDir": "${workspaceFolder}/docs/source",
    "esbonio.sphinx.srcDir": "${workspaceFolder}/docs/source",
    //    "esbonio.server.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "restructuredtext.linter.doc8.extraArgs": [
        "--config",
        "${workspaceFolder}/doc8.ini"
    ]
}